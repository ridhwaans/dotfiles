// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src
{
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-18",
  "features": {
      "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "npm install -g @devcontainers/cli",
  "hostRequirements": {
    "cpus": 4
  },
	"customizations": {
		"vscode": {
      "extensions": [
        "mads-hartmann.bash-ide-vscode",
				"alireza94.theme-gotham",
        "PKief.material-icon-theme",
        "dunstontc.viml",
        "eamodio.gitlens",
        "GitHub.codespaces",
        "GitHub.copilot",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh",
        "ms-vscode-remote.remote-wsl",
        "ms-vsliveshare.vsliveshare",
        "EditorConfig.EditorConfig",
        "dbaeumer.vscode-eslint",
        "GraphQL.vscode-graphql",
        "GraphQL.vscode-graphql-syntax",
        "Prisma.prisma",
        "rubocop.vscode-rubocop",
        "sorbet.sorbet-vscode-extension"
			],
			"settings": {
				// Appearance
				"workbench.iconTheme": "material-icon-theme",
				"workbench.colorTheme": "Gotham",
				"editor.fontFamily": "'Roboto Mono for Powerline', Menlo, Monaco, 'Courier New', monospace",
				"terminal.integrated.fontFamily": "'Roboto Mono for Powerline'",
				// Core
				"terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
				"terminal.integrated.defaultProfile.linux": "zsh",
				"terminal.integrated.defaultProfile.osx": "zsh",
				"terminal.external.osxExec": "iTerm.app",
				"terminal.external.windowsExec": "wt.exe",
				// Search
				"search.exclude": {
					"**/node_modules": true,
          "**/.git": true,
					"build/": true,
					"dist/": true
				}
			}
		}
	}
}
